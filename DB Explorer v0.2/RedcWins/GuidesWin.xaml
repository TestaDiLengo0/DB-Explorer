<Window x:Class="DB_Explorer_v0._2.RedcWins.GuidesWin"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DB_Explorer_v0._2.RedcWins"
        mc:Ignorable="d"
        Title="GuidesWin" Height="550" Width="500"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        MinHeight="550" MinWidth="500">
    <Grid>
        <Border Margin="25" Background="LightGray" CornerRadius="20">
            <StackPanel>
                <TextBox x:Name="nameBox" Margin="10 20" materialDesign:HintAssist.HelperText="Введите название издания"/>
                <ComboBox x:Name="authorNameCombo" Margin="10 20" materialDesign:HintAssist.HelperText="Выберите автора"/>
                <TextBox x:Name="pubYearBox" Margin="10 20" materialDesign:HintAssist.HelperText="Введите год издания"/>
                <TextBox x:Name="numberPagesBox" Margin="10 20" materialDesign:HintAssist.HelperText="Введите количество страниц"/>
                <ComboBox x:Name="typeCombo" Margin="10 20" materialDesign:HintAssist.HelperText="Выберите тип издания"/>
                <ComboBox x:Name="disciplineCombo" Margin="10 20" materialDesign:HintAssist.HelperText="Выберите дисциплину"/>
                <Grid>
                    <Button x:Name="EnterButton" Click="EnterButton_Click"  Margin="20 40 10 40" MinWidth="150" HorizontalAlignment="Left" Content="Подтвердить ввод"/>
                    <Button x:Name="CancelButton" Click="CancelButton_Click"  Margin="10 40 20 40" MinWidth="150" HorizontalAlignment="Right" Content="Отменить ввод"/>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>
