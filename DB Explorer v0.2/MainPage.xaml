<Page x:Class="DB_Explorer_v0._2.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DB_Explorer_v0._2"
      mc:Ignorable="d" 
      ShowsNavigationUI="False"
      d:DesignHeight="600" d:DesignWidth="950"
      WindowTitle="MainMenu"
      Title="MainPage"
      Background="White">

    <Grid>
        <Border Margin="100 50" MinHeight="400" MaxHeight="800" MinWidth="400" MaxWidth="1000" CornerRadius="20" Background="#BDBDBD">
            <StackPanel Margin="100 50">
                <Label Padding="0 0 0 20" Margin="0 0 0 50" FontWeight="ExtraBlack" HorizontalContentAlignment="Center" FontSize="40" Content="DB EXPLORER"/>
                <Button x:Name="StartButton" Click="StartButton_Click" Margin="50 10" FontSize="20" FontWeight="Medium" Height="40" Content="Начало работы"/>
                <Button x:Name="FreeButton" Click="FreeButton_Click" Margin="50 10" FontSize="20" FontWeight="Medium" Height="40" Content="Свободный режим"/>
                <Button x:Name="ExitButton" Click="ExitButton_Click" Margin="50 10" FontSize="20" FontWeight="Medium" Height="40" Content="Выход"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
