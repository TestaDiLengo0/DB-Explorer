<Page x:Class="DB_Explorer_v0._2.WorkPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DB_Explorer_v0._2"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      WindowTitle="WorkPlace"
      Title="WorkPage"
      Background="White"
      
      Loaded="Page_Loaded">

    <Grid>
        <Menu x:Name="TablesMenu" Background="Gray">
            <MenuItem Header="Преподаватели" Background="White"/>
            <MenuItem Header="Учебные материалы" Background="LightGray"/>
            <MenuItem Header="Дисциплины" Background="LightGray"/>
            <MenuItem Header="Кафедры" Background="LightGray"/>
            <MenuItem Header="Типы материалов" Background="LightGray"/>
        </Menu>
        <DataGrid Name="DBDataGrid" Margin="0,18,0,0" RowBackground="LightGray" AlternatingRowBackground="White">
        </DataGrid>
    </Grid>
</Page>
